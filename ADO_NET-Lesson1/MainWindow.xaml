<Window x:Class="ADO_NET_Lesson1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_NET_Lesson1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Status_Btn" Content="Open Status Window" 
                Grid.Column="0"  Width="300" Height="150"
                FontSize="25" FontWeight="DemiBold"
                Click="Status_Btn_Click"/>
        <Button x:Name="OMR_Btn" Content="Open OMR Window"
                Grid.Column="1" Width="300" Height="150"
                FontSize="25" FontWeight="DemiBold"
                Click="OMR_Btn_Click"/>
    </Grid>
</Window>
