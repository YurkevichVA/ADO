<Window x:Class="ADO_NET_Lesson1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_NET_Lesson1"
        mc:Ignorable="d"
        Title="MainWindow" Height="660" Width="420">
    <Grid>
        <StackPanel>
            <Button x:Name="Status_Btn" Content="Основи технології" 
                Grid.Column="0" Margin="30" Height="90"
                FontSize="25" FontWeight="DemiBold"
                Click="Status_Btn_Click"/>
            <Button x:Name="ORM_Btn" Content="ORM"
                Grid.Column="1" Margin="30" Height="90"
                FontSize="25" FontWeight="DemiBold"
                Click="ORM_Btn_Click"/>
            <Button x:Name="DAL_Btn" Content="DAL, Data context"
                Grid.Column="1" Margin="30" Height="90"
                FontSize="25" FontWeight="DemiBold"
                Click="DAL_Btn_Click"/>
            <Button x:Name="Ef_Btn" Content="Entity framework"
                Grid.Column="1" Margin="30" Height="90"
                FontSize="25" FontWeight="DemiBold"
                Click="Ef_Btn_Click"/>
        </StackPanel>
    </Grid>
</Window>
